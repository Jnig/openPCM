<h1>VirtualMachine list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Vcpu</th>
            <th>Memory</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('virtualmachine_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.vcpu }}</td>
            <td>{{ entity.memory }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('virtualmachine_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('virtualmachine_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('virtualmachine_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
